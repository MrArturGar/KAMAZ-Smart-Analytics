@using Microsoft.AspNetCore.Mvc.Localization;
@using KAMAZ_Smart_Analytics.Models.List;

@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@model VehicleListViewModel
<link href="~/css/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewData["Title"] = "Vehicles";
}

<div class="text-center">
    <h1 class="display-4">Vehicles</h1>
    <form method="get">
        <div class="container">
            <div class="row">
                <div class="col" align="left">
                    <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                        @SharedLocalizer["Filter"]
                    </a>
                </div>
                <div class="col" align="center">
                    <select name="sortOrder" asp-for="SortViewModel.Current" asp-items="Html.GetEnumSelectList<SortVehicleState>()" class="form-select"></select>
                </div>
                <div class="col" align="right">

                    <input id="filter" type="submit" value="Применить" class="btn btn-outline-dark" />
                </div>
            </div>
        </div>
        <div class="collapse px-4" id="collapseExample">

            <div class="container">
                <div class="row">
                    <div class="col">
                        <h5>@SharedLocalizer["Vin"]: </h5>
                        <input name="vin" value="@Model.FilterViewModel.SelectedVin" class="form-control" />
                    </div>
                    <div class="col">
                        <h5>@SharedLocalizer["DesignNumber"]: </h5>
                        <input name="design_number" value="@Model.FilterViewModel.SelectedDesign_number" class="form-control" />
                    </div>
                    <div class="col">
                        <h5>@SharedLocalizer["Iccid"]: </h5>
                        <input name="iccid" value="@Model.FilterViewModel.SelectedIccid" class="form-control" />
                    </div>
                    <div class="col">
                        <h5>@SharedLocalizer["Iccidc"]: </h5>
                        <input name="iccidc" value="@Model.FilterViewModel.SelectedIccidc" class="form-control" />
                    </div>
                    <div class="col">
                        <h5>@SharedLocalizer["Imei"]: </h5>
                        <input name="imei" value="@Model.FilterViewModel.SelectedImei" class="form-control" />
                    </div>
                    <div class="col">
                        <h5>@SharedLocalizer["Type"]: </h5>
                        <input name="type" value="@Model.FilterViewModel.SelectedType" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </form>
    <br />
    <table id="content-container" class="table table-striped table-hover">
        <thead>
            <tr>
                <td><h5>@SharedLocalizer["Vin"]</h5></td>
                <td><h5>@SharedLocalizer["DesignNumber"]</h5></td>
                <td><h5>@SharedLocalizer["Iccid"]</h5></td>
                <td><h5>@SharedLocalizer["Iccidc"]</h5></td>
                <td><h5>@SharedLocalizer["Imei"]</h5></td>
                <td><h5>@SharedLocalizer["Type"]</h5></td>
            </tr>
        </thead>
        @foreach (Vehicle s in Model.Objects)
        {
            <tr class='clickable-row' data-href="/Vehicle/Index?Id=@s.Id">
                <td><p>@s.Vin</p></td>
                <td><p>@s.DesignNumber<p /></td>
                <td><p>@s.Iccid</p></td>
                <td><p>@s.Iccidc</p></td>
                <td><p>@s.Imei</p></td>
                <td><p>@s.Type</p></td>
            </tr>
        }
    </table>
    <br />

    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a asp-action="List"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       asp-route-sortOrder="@(Model.SortViewModel.Current)"
       asp-route-vin="@(Model.FilterViewModel.SelectedVin)"
       asp-route-design_number="@(Model.FilterViewModel.SelectedDesign_number)"
       asp-route-iccid="@(Model.FilterViewModel.SelectedIccid)"
       asp-route-iccidc="@(Model.FilterViewModel.SelectedIccidc)"
       asp-route-imei="@(Model.FilterViewModel.SelectedImei)"
       asp-route-type="@(Model.FilterViewModel.SelectedType)"
       class="btn btn-outline-dark">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Назад
        </a>
    }
    Страница @(Model.PageViewModel.TotalPages < Model.PageViewModel.PageNumber ? 0 : Model.PageViewModel.PageNumber) из @Model.PageViewModel.TotalPages

    @if (Model.PageViewModel.HasNextPage)
    {
        <a asp-action="List"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       asp-route-sortOrder="@(Model.SortViewModel.Current)"
       asp-route-vin="@(Model.FilterViewModel.SelectedVin)"
       asp-route-design_number="@(Model.FilterViewModel.SelectedDesign_number)"
       asp-route-iccid="@(Model.FilterViewModel.SelectedIccid)"
       asp-route-iccidc="@(Model.FilterViewModel.SelectedIccidc)"
       asp-route-imei="@(Model.FilterViewModel.SelectedImei)"
       asp-route-type="@(Model.FilterViewModel.SelectedType)"
       class="btn btn-outline-dark">
            Вперед
            <i class="glyphicon glyphicon-chevron-right"></i>
        </a>
    }
</div>

@section Scripts{
<script>
    $(document).ready(function($) {
        $(".clickable-row").click(function() {
            window.document.location = $(this).data("href");
        });
    });
</script>
}